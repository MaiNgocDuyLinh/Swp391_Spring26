@model Group3_SWP391_PetMedical.ViewModels.Pet.EditPetVm

@{
    ViewData["Title"] = "Sửa thú cưng";

    var defaultImg = Url.Content("~/assets/img/Avt/AvtPetDefault.png");
    string imgUrl;

    if (string.IsNullOrWhiteSpace(Model.CurrentPetImg))
    {
        imgUrl = defaultImg;
    }
    else if (Model.CurrentPetImg.StartsWith("http", StringComparison.OrdinalIgnoreCase) || Model.CurrentPetImg.StartsWith("/"))
    {
        imgUrl = Model.CurrentPetImg;
    }
    else
    {
        imgUrl = Url.Content("~/uploads/pets/" + Model.CurrentPetImg);
    }
}

<style>
    .petform-page {
        padding-top: 140px;
    }

    @@media (max-width: 991.98px) {
        .petform-page {
            padding-top: 160px;
        }
    }

    .petform-frame {
        background: #ffffff;
        border: 1px solid #eef0f4;
        border-radius: 26px;
        padding: 38px 34px;
        box-shadow: 0 18px 40px rgba(0,0,0,.06);
        max-width: 920px;
        margin: 0 auto;
    }

    @@media (max-width: 575.98px) {
        .petform-frame {
            padding: 26px 16px;
            border-radius: 20px;
        }
    }

    .petform-title {
        text-align: center;
        margin-bottom: 18px;
    }

        .petform-title h1 {
            font-size: 44px;
            font-weight: 900;
            color: #0b1c39;
            margin: 0;
        }

    @@media (max-width: 575.98px) {
        .petform-title h1 {
            font-size: 30px;
        }
    }

    .petform-card {
        background: #fff5f7;
        border: 1px solid rgba(255, 61, 28, .10);
        border-radius: 18px;
        padding: 22px;
    }

    .petform-label {
        font-weight: 800;
        color: #0b1c39;
    }

    .petform-input {
        height: 52px;
        border-radius: 14px;
        border: 1px solid #eef0f4;
        box-shadow: none;
    }

        .petform-input:focus {
            border-color: rgba(255,61,28,.35);
            box-shadow: 0 0 0 .2rem rgba(255,61,28,.10);
        }

    .petform-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 16px;
    }

    .btn-main {
        height: 52px;
        border-radius: 999px;
        padding: 0 22px;
        font-weight: 900;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        border: none;
        transition: .2s ease;
        text-decoration: none;
        white-space: nowrap;
    }

    .btn-save {
        background: #ff3d1c;
        color: #fff;
    }

        .btn-save:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 30px rgba(0,0,0,.08);
            color: #fff;
            text-decoration: none;
        }

    .btn-back {
        background: #5aa9ff;
        color: #fff;
    }

        .btn-back:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 30px rgba(0,0,0,.08);
            color: #fff;
            text-decoration: none;
        }

    .pet-imgbox {
        display: flex;
        gap: 18px;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 10px;
    }

        .pet-imgbox img {
            width: 86px;
            height: 86px;
            border-radius: 999px;
            object-fit: cover;
            background: #fff;
            border: 1px solid #eef0f4;
        }
</style>

<section class="services-area section-padding40 petform-page">
    <div class="container">
        <div class="petform-frame">
            <div class="petform-title">
                <h1>Sửa thú cưng</h1>
            </div>

            <div class="petform-card">
                <form asp-controller="Pet" asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input asp-for="PetId" type="hidden" />
                    <input asp-for="CurrentPetImg" type="hidden" />

                    <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:12px;"></div>

                    <div class="col-12 mb-3">
                        <label class="petform-label">Ảnh hiện tại</label>
                        <div class="pet-imgbox">
                            <!-- THÊM id để preview -->
                            <img id="petPreview"
                                 src="@imgUrl"
                                 alt="Pet image"
                                 onerror="this.onerror=null;this.src='@defaultImg';" />
                            <div style="color:#5d6b82;">
                                Chọn ảnh mới để thay thế
                            </div>
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <label class="petform-label">Đổi ảnh thú cưng</label>
                        <!-- THÊM id + onchange để preview -->
                        <input asp-for="NewPetImage"
                               id="petFile"
                               type="file"
                               class="form-control petform-input"
                               accept="image/*"
                               onchange="previewPetImage(event)"
                               style="padding-top:12px;height:auto;" />
                        <span asp-validation-for="NewPetImage" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="petform-label">Tên thú cưng</label>
                            <input asp-for="Name" class="form-control petform-input" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="petform-label">Loài</label>
                            <input asp-for="Species" class="form-control petform-input" />
                            <span asp-validation-for="Species" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="petform-label">Giống</label>
                            <input asp-for="Breed" class="form-control petform-input" />
                            <span asp-validation-for="Breed" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="petform-label">Cân nặng (kg)</label>
                            <input asp-for="Weight" class="form-control petform-input" step="0.01" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="petform-label">Tuổi</label>
                            <!-- Tuổi năm chẵn: step=1 -->
                            <input asp-for="Age"
                                   type="number"
                                   step="1"
                                   min="0"
                                   class="form-control petform-input"
                                   placeholder="VD: 1,2,3..." />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="petform-actions">
                        <button type="submit" class="btn-main btn-save">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                        <a class="btn-main btn-back" href="@Url.Action("MyPets", "Pet")">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewPetImage(event) {
            const input = event.target;
            const preview = document.getElementById('petPreview');
            if (!preview) return;

            if (!input.files || input.files.length === 0) return;

            const file = input.files[0];

            // Chỉ nhận ảnh
            if (!file.type || !file.type.startsWith('image/')) {
                alert('Vui lòng chọn đúng tệp hình ảnh.');
                input.value = '';
                preview.src = '@imgUrl'; // quay lại ảnh hiện tại
                return;
            }

            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result; // đổi ảnh preview
            };
            reader.readAsDataURL(file);
        }
    </script>
}
