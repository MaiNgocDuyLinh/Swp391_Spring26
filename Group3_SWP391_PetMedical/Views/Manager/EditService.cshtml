@model Group3_SWP391_PetMedical.Models.Service
@{
    ViewData["Title"] = "Chỉnh sửa dịch vụ";
}

<!-- Hero Area Start -->
<div class="slider-area2 slider-height2 d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="hero-cap text-center pt-50">
                    <h2>Chỉnh sửa Dịch vụ (Manager)</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero Area End -->

<div class="container" style="padding: 50px 0;">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa: @Model.service_name</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditService" asp-controller="Manager" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.service_id" />

                        <!-- Thông tin chỉ đọc -->
                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label font-weight-bold">Tên dịch vụ:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control-plaintext" readonly value="@Model.service_name" />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label font-weight-bold">Thời gian:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control-plaintext" readonly 
                                       value="@(Model.duration?.ToString() ?? "N/A") phút" />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-sm-3 col-form-label font-weight-bold">Dịch vụ tại nhà:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control-plaintext" readonly 
                                       value="@(Model.is_home_service == true ? "Có" : "Không")" />
                            </div>
                        </div>

                        <hr />

                        <!-- Thông tin có thể chỉnh sửa -->
                        <div class="form-group row mb-3">
                            <label for="base_price" class="col-sm-3 col-form-label font-weight-bold">
                                Giá thành (VNĐ): <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" id="base_price" name="base_price" 
                                       value="@Model.base_price" min="0" step="1000" required />
                                <small class="form-text text-muted">Nhập giá tiền bằng số (VNĐ)</small>
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            <label for="description" class="col-sm-3 col-form-label font-weight-bold">Mô tả:</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" id="description" name="description" 
                                          rows="4" placeholder="Nhập mô tả dịch vụ...">@Model.description</textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Lưu thay đổi
                                </button>
                                <a href="@Url.Action("ListServices", "Manager")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Hủy
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .card-header {
        border-radius: 10px 10px 0 0;
    }
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
</style>
